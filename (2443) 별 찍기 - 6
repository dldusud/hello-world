#include <stdio.h>

int main()
{
    int N = 0;
    scanf("%d", &N);
    
    for(int i = 0; i < N; i++)
    {
        for(int j = 0; j < N; j++)
        {
            if(i > j)
                printf(" ");
            else
                printf("*");
        }
        
        for(int j = N - 2; j >= 0; j--)
        {
            if(j >= i)
                printf("*");
        }
        
        printf("\n");
    }
    
    return 0;
}
